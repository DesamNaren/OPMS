                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sent Common Qty" />

                        <TextView
                            android:id="@+id/sentComQtyTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
