<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PPCtoMiller_LandDetailsMain_Tr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:padding="2dp" >

    <CheckBox
        android:id="@+id/PPCtoMiller_paddytype_Cb"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="Grade A"
        android:layout_weight="1.0"
        android:textSize="15sp"
        android:padding="5dp"
        android:checked="false" />

    <TextView
        android:id="@+id/PPCtoMiller_token"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/PPCtoMiller_transid"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PPCtoMiller_newbagsAvail_tv"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PPCtoMiller_oldBagsAvail_tv"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PPCtoMiller_newBagsSent_Et"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@drawable/rounded_corner_et"
        android:gravity="center_vertical"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:layout_weight="1.0"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/PPCtoMiller_oldBagsSent_Et"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@drawable/rounded_corner_et"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/PPCtoMiller_qtySent_Et"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_weight="1.0"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <!--changed inputtype to none by Yamini on 08032017-->
</TableRow>