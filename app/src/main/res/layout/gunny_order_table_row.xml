<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Gunny_OrderDetailsMain_Tr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:padding="2dp"
    android:weightSum="100">

    <CheckBox
        android:id="@+id/Gunny_Order_Cb"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="5dp" />

    <Spinner
        android:id="@+id/Gunny_Order_Sp"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@drawable/rectangular_et"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Gunny_Manual_OrderId"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/avail_new_bags"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/avail_old_bags"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/Gunny_OrderDetails_LL"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:visibility="visible" >

        <EditText
            android:id="@+id/Gunny_Newbags_Et"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rounded_corner_et"
            android:gravity="center_vertical"
            android:hint="@string/NewBags"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Gunny_Oldbags_Et"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rounded_corner_et"
            android:gravity="center_vertical"
            android:hint="@string/OldBags"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</TableRow>
