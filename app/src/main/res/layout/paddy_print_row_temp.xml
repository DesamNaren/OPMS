<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FR_LandDetailsMain_Tr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/background_print"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:text="#"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/pdf_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_print"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:text="Farmer Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/pdf_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_print"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:text="Bank Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/pdf_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:background="@drawable/background_print"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:text="Paddy Procurement Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/pdf_color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@drawable/background_print"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:text="Payment Status"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/pdf_color"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/det_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/sNoTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/background_print"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/basicDet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_print"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/bankDet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_print"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/prcDet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@drawable/background_print"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/payDet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:background="@drawable/background_print"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>